{
    "name": "dn_layerswipe",
    "version": "2.0.0-SNAPSHOT",
    "title": "${bundleName}",
    "description": "${bundleDescription}",
    "vendor": "con terra GmbH",
    "productName": "devnet-mapapps-layer-swipe",
    "layer": "module",
    "i18n": [
        "bundle"
    ],
    "dependencies": {
        "esri": "^4.13.0",
        "esri-widgets": "^4.8.0-SNAPSHOT",
        "map-widget": "^4.8.0-SNAPSHOT"
    },
    "startLevel": 50,
    "CSS-Themes-Extension": [
        {
            "name": "*",
            "files": [
                "./css/styles.css"
            ]
        }
    ],
    "components": [
        {
            "name": "Config",
            "impl": "./SwipeFactory",
            "provides": [
                "dn_layerswipe/SwipeFactory"
            ],
            "properties": {
                "leadingLayerIds": [],
                "trailingLayerIds": [],
                "direction": "horizontal",
                "position": 50
            },
            "references": [
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                },
                {
                    "name": "_tool",
                    "providing": "ct.tools.Tool",
                    "filter": "(id=swipeToggleTool)",
                    "cardinality": "0..1"
                }
            ]
        },
        {
            "name": "SwipeToggleTool",
            "impl": "ct/tools/Tool",
            "provides": [
                "ct.tools.Tool"
            ],
            "propertiesConstructor": true,
            "properties": {
                "id": "swipeToggleTool",
                "title": "${tool.title}",
                "tooltip": "${tool.tooltip}",
                "iconClass": "icon-extent",
                "toolRole": "toolset",
                "togglable": true,
                "activateHandler": "showWidget",
                "deactivateHandler": "hideWidget",
                "noGroup": true,
                "rules": {
                    "viewmode": "2D",
                    "ruleSuccessProperty": "visibility"
                }
            },
            "references": [
                {
                    "name": "handlerScope",
                    "providing": "dn_layerswipe/SwipeFactory"
                }
            ]
        }
    ]
}
